<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users List</title>
</head>
<body>
    <h1>Users List</h1>
    <a href="/users/create">Create New User</a>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>FullName</th>
                <th>Email</th>
                <th>Password</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.lastName %> <%= user.firstName %></td>
                    <td><%= user.email %></td>
                    <td><%= user.password %></td>
                    <td>
                        <a href="/users/<%= user.id %>/edit">Edit</a>
                        |
                        <a href="/users/<%= user.id %>/delete" onclick="return confirm('Bạn có chắc muốn xóa người dùng này?');">
                            Delete
                        </a>
                        |
                        <a href="/users/<%= user.id %>/detail">
                            Details
                        </a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>